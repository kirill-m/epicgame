<fest:template xmlns:fest="http://fest.mail.ru">
	<h1>Epic Game</h1>
		<p>Login</p>
		<div class="main__page__menu">
			<form action="/authform">
				<input class="js-login main__page__menu__input main__page__menu__input_login" type="text" name="login" placeholder="Login" maxlength="32"/>
				<input class="js-password main__page__menu__input main__page__menu__input_password" type="password" name="password" placeholder="Password"/>
				<input class="js-submit main__page__menu__input main__page__menu__input_submit" type="submit" name="submit" value="Submit"/>
			</form>
		</div>
		<a class="back" href="#">Back</a>
		<script>
			<!-- listen for clicks -->
			$('form').on('submit', function(event){
				console.log($(this).serialize());
				$.post('/api/v1/auth/signin', $(this).serialize(), function(response) {	
				});
				event.preventDefault();
			});

			
		</script>
</fest:template>
