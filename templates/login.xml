<fest:template xmlns:fest="http://fest.mail.ru">
	<div class="header">
		<h1 class="header__title">Epic Game</h1>
		<p class="header__par">Login</p>
	</div>	
		<div class="square">
			<form  class="login-form" method='post'>
				<input class="login-form__input" type="text" name="login" placeholder="Login" maxlength="30"  pattern="[A-Za-z-0-9]+" required="required" title="A-Z, a-z, 0-9"/>
				<input class="login-form__input" name="password" placeholder="Password" maxlength="30" aria-required="true" required="required" pattern="[A-Za-z-0-9]+" title="A-Z, a-z, 0-9, 4 char min"/>
				<input class="button" type="submit" name="submit" value="Submit"/>
			</form>
		</div>
</fest:template>
