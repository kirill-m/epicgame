<fest:template xmlns:fest="http://fest.mail.ru">
	<h1>Epic Game</h1>
		<p>Registration</p>
		<div class="main__page__menu">
			<form  method='post' >
				<input class="js-login main__page__menu__input main__page__menu__input_login" type="text" name="login" placeholder="Login" maxlength="30"  pattern="[A-Za-z-0-9]+" required="required" title="A-Z, a-z, 0-9"/>
				<input class="js-password main__page__menu__input main__page__menu__input_password" type="password" name="password" placeholder="Password" maxlength="30" aria-required="true" required="required" pattern="[A-Za-z-0-9]+{4}" title="A-Z, a-z, 0-9, 4 char min"/>
				<input class="js-submit main__page__menu__input main__page__menu__input_submit" type="submit" name="submit" value="Submit"/>
			</form>
		</div>
		<a class="back" href="#">Back</a>
</fest:template>
